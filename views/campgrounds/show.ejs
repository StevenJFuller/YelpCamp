<% include ../partials/header.ejs %>

<div class="container">
  <div class="jumbotron">
    <div class="container">
      <h1><%= campground.name %></h1>
      <p class="lead"><%= campground.description %></p>
    </div>
  </div>
  <img src="<%= campground.image %>" alt="<%= campground.name %>">
  <p>
    <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-outline-primary">&plus; new comment</a>
  </p>
  <% campground.comments.map(comment => { %>
  <p>
    <strong><%= comment.author %></strong> - <%= comment.text %>
  </p>
  <% }) %>
</div>

<% include ../partials/footer %>
