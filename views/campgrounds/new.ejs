<% include ../partials/header %>

<h1 class="text-center">Add a new campground.</h1>
<div class="row justify-content-center">
  <div class="col-md-6">
    <form action="/campgrounds" method="POST" class="mb-2">
      <div class="form-group">
        <label for="campgroundName">Campground name</label>
        <input type="text" class="form-control" name="name" id="campgroundName"
          placeholder="Enter the campground name.">
      </div>
      <div class="form-group">
        <label for="campgroundImage">Image URL</label>
        <input type="text" class="form-control" name="image" id="campgroundImage"
          placeholder="Enter the URL of the campground image.">
      </div>
      <div class="form-group">
        <label for="campgroundDescription">Description</label>
        <textarea class="form-control" name="description" id="campgroundDescription"
          placeholder="Enter a description of the campground."></textarea>
      </div>
      <button type="submit" class="btn btn-primary form-control">Submit</button>
    </form>
    <a href="/campgrounds" class="btn btn-outline-danger">Cancel</a>
  </div>
</div>

<% include ../partials/footer %>
