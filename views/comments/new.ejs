<% include ../partials/header %>

<h1 class="text-center">Add a comment for <%= campground.name %></h1>
<div class="row justify-content-center">
  <div class="col-md-6">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="mb-2">
      <div class="form-group">
        <label for="comment">Comment</label>
        <input type="text" class="form-control" name="text" id="comment" placeholder="Enter your comment.">
      </div>
      <button type="submit" class="btn btn-primary form-control">Submit</button>
    </form>
    <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-danger">Cancel</a>
  </div>
</div>

<% include ../partials/footer %>
