<% include ../partials/header %>

<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Add a comment for <%= campground.name %></h1>
  </div>
</div>
<form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="mb-2">
  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" class="form-control" name="author" id="author" placeholder="Enter the author.">
  </div>
  <div class="form-group">
    <label for="comment">Comment</label>
    <input type="text" class="form-control" name="text" id="comment" placeholder="Enter your comment.">
  </div>
  <button type="submit" class="btn btn-primary form-control">Submit</button>
</form>
<a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-danger">Cancel</a>

<% include ../partials/footer %>
